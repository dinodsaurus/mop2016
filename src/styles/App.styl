@import "./fonts"
@import "./colors"
html
  box-sizing: border-box
  font-family: "DiaBlack"

*, *:before, *:after
  box-sizing: inherit

a
  text-decoration:none
  color: $blue

.group:after
  content: ""
  display: table
  clear: both

.container
  color: $blue
  max-width:1160px
  margin:0 auto

.loading
  position:fixed
  top: 100%
  left: 0
  width: 100%
  height: 100%
  background: $blue
  transition: top .7s
  &.active
    top: 0
    .loader
      transform:scale(3);
  .loader
    position:absolute
    width: 100px
    height: 100px
    margin: auto
    top:0
    left: 0
    bottom: 0
    right: 0
    transform:scale(1);
    background: url("../images/preloader.svg") no-repeat
    background-size: 100% auto
    transition: all 1s
