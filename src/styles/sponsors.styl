@import 's-grid-settings'
// you can overwrite settings here
@import 's-grid-functions'
@import './colors'
.sponsors
  .text
    float: left
    width: 100%
    margin: 90px 0 70px
    p
      text-align:center
      margin: 0
      &.small
        text-transform: uppercase
        font-size:46px
      &.big
        text-transform: uppercase
        font-size:455px
        letter-spacing: -31.6px;
      &.desc
        font-family: "DiaLight"
        font-size:36px
        max-width: 970px
        margin: 0 auto 100px
        color: $blue
.cont
  h3
    font-size:34px
    margin:60px 0 30px
.partners
    grid()
    .item
      height: 150px
      background: $blue
      &:first-child
        margin-left: 0
      &.four
        cell(3)
      &.three
        cell(4)
