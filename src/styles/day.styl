@import 's-grid-settings'
// you can overwrite settings here
@import 's-grid-functions'
@import './colors'
@import "./fonts"
@import "./mixins"

.day
  width: 100%
  float: left
  margin-top:50px
  &:first-child
    margin-top: 25px
  h3
    font-family: "DiaBlack"
    float: left
    font-size: 280px
    letter-spacing: -20px
    margin: 0
    text-transform: uppercase
    @media phone
      font-size: 80px
      letter-spacing: 0
  .img
    float:right
    width: 170px
    height: 170px
    background-size:cover
    margin-top: 70px
    @media phone
      margin-top: 0
      width: 100px
      height: 100px
      margin-bottom: 20px
  .sessions
    float:left
    .outer
      max-height: 83px
      overflow:hidden
      border-bottom: 3px solid $blue
      transition: max-height .9s
      @media phone
        max-height: 250px
      &:first-child
        border-top: 3px solid $blue
      &.active
        max-height: 800px
        .link
          &:hover
            opacity: 0
        .session
          p
            @media phone
              height: auto
          h5
            height: 34px
            @media phone
              height: 20px
          .desc
            margin-top: 0
    .link
      position:absolute
      width: 100%
      height: 83px
      z-index: 100
      background: white
      opacity: 0
      transition: opacity .3s;
      cursor:pointer
      &:hover
        opacity: .3
    .session
      position: relative
      padding: 25px 0
      grid()
      transition: all .3
      @media phone
        padding: 0 20px
      h5
        font-size: 12px
        color: $blue
        height: 0
        overflow: hidden
        transition: height .3s
        @media phone
          margin-top: 20px
      h4
        margin:0
        font-size:18px
        font-family: "DiaBlack"
        cursor:pointer
      p
        color: $blue
        font-family: "DiaLight"
        margin-top: 20px
        font-size: 20px
        @media phone
          height: 0
          overflow: hidden
          margin: 0!important
      .time
        cell(2)
        @media phone
          cell(12)
          margin: 0
        p
          margin-top:25px
      .speaker
        cell(4)
        @media phone
          cell(12)
          margin: 0
        h5
          padding-left: 35px
          @media phone
            padding-left: 0
        .type
          width: 25px
          height:25px
          color:white
          background: $blue
          text-align:center
          font-size:12px
          line-height: 25px
          border-radius: 12px
          float:left
          margin-top: -3px
          margin-right: 10px
          @media phone
            display: none
        p
          padding-left: 35px
          @media phone
            padding-left: 0
        .links
          position:relative
          margin-top: 20px
          padding-top: 20px
          padding-left: 35px
          @media phone
            height: 0
            overflow: hidden
            display: none
          &:before
            content:""
            position:absolute
            top:0
            left: 35px
            width: calc(100% - 45px)
            height: 3px
            background: $blue
            @media phone
              display:none
        a
          font-family: "DiaLight"
          font-size: 20px
          display:block
          text-transform: capitalize
      .desc
        cell(6)
        @media phone
          cell(12)
          margin:-15px 0 20px
