@import 's-grid-settings'
// you can overwrite settings here
@import 's-grid-functions'
@import './colors'
@import "./fonts"
.day
  width: 100%
  float: left
  margin-top:50px
  &:first-child
    margin-top: 25px
  h3
    font-family: "DiaBlack"
    float: left
    font-size: 280px
    letter-spacing: -20px
    margin: 0
    text-transform: uppercase
  .img
    float:right
    width: 170px
    height: 170px
    background-size:cover
    margin-top: 70px
  .sessions
    float:left
    .outer
      max-height: 83px
      overflow:hidden
      border-bottom: 3px solid $blue
      transition: max-height .9s
      &:first-child
        border-top: 3px solid $blue
      &.active
        max-height: 800px
        .link
          &:hover
            opacity: 0
        .session
          h5
            height: 34px
    .link
      position:absolute
      width: 100%
      height: 83px
      z-index: 100
      background: white
      opacity: 0
      transition: opacity .3s;
      cursor:pointer
      &:hover
        opacity: .3
    .session
      position: relative
      padding: 25px 0
      grid()
      transition: all .3
      h5
        font-size: 12px
        color: $blue
        height: 0
        overflow: hidden
        transition: height .3s
      h4
        margin:0
        font-size:18px
        font-family: "DiaBlack"
        cursor:pointer
      p
        color: $blue
        font-family: "DiaLight"
        margin-top: 20px
        font-size: 20px
      .time
        cell(2)
        p
          margin-top:25px
      .speaker
        cell(4)
        h5
          padding-left: 35px
        .type
          width: 25px
          height:25px
          color:white
          background: $blue
          text-align:center
          font-size:12px
          line-height: 25px
          border-radius: 12px
          float:left
          margin-top: -3px
          margin-right: 10px
        p
          padding-left: 35px
        .links
          position:relative
          margin-top: 20px
          padding-top: 20px
          padding-left: 35px
          &:before
            content:""
            position:absolute
            top:0
            left: 35px
            width: calc(100% - 45px)
            height: 3px
            background: $blue
        a
          font-family: "DiaLight"
          font-size: 20px
          display:block
          text-transform: capitalize
      .desc
        cell(6)
