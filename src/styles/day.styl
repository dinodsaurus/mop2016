@import './colors'
@import "./fonts"
.day
  width: 100%
  float: left
  h3
    font-family: "DiaBlack"
    float: left
    font-size: 280px
    margin: 0
    text-transform: uppercase
  .img
    float:right
    width: 170px
    height: 170px
    background-size:cover
    margin-top: 70px
  .sessions
    float:left
    width: 100%
    .session
      padding: 25px 0
      border-bottom: 3px solid $blue
      h4
        margin:0
        font-size:18px
        font-family: "DiaBlack"
      .time
        float:left
        width:200px
      .speaker
        float: left
        width: 350px
      .desc
        float:left
        width: 560px
