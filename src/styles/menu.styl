.menu-screen
  position:fixed
  z-index: 100
  left: 0
  top: 100%
  width: 100%
  height:100%
  background: #666
  transition: all .5s
  &.active
    top: 0
    background: white
    ul
      li
        margin-bottom: 20px
  ul
    position:absolute
    width: 100%;
    margin: 0
    padding: 0
    left: 0
    top: 10%
    li
      width: 100%;
      list-style:none;
      text-align:center;
      font-size:48px;
      margin-bottom: 150px
      transition: all .7s
