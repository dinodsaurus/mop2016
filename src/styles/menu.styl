.menu-screen
  position:fixed
  z-index: 100
  left: 0
  top: 100%
  width: 100%
  height:100%
  background: #666
  overflow:hidden
  transition: all .5s
  &.active
    top: 0
    background: white
    ul
      li
        margin-bottom: 20px
  &.exiting
    top: -100%
    background: #999
    transition: all 1s
    ul
      li
        margin-bottom: 0
  &.noAnimation
    transition: none
  ul
    position:absolute
    width: 100%;
    margin: 0
    padding: 0
    left: 0
    top: 10%
    li
      width: 100%;
      list-style:none;
      text-align:center;
      font-size:48px;
      margin-bottom: 100px
      transition: all .7s
