@import 's-grid-settings'
// you can overwrite settings here
@import 's-grid-functions'
@import './colors'
@import './mixins'

.speakersList
  grid()
  margin: 2000px 0 70px
  @media phone
    margin-top: 0
  .item
    cell(4)
    position:relative
    margin-bottom: 20px
    cursor:pointer
    @media tablet
      cell(6)
    @media phone
      cell(12)
    &:hover
      .img
        img
          top: -15px
          left: -15px
    h2
      font-size:18px
      margin-top: 15px
    p
      font-family: "DiaLight"
      color: $grey
      font-size: 16px
    .img
      position:relative
      width: 100%
      line-height: 0
      .bck
        z-index: -1
        position:absolute
        width: 100%
        height: 100%
        top:0
        left: 0
        border: 5px solid $blue
      img
        position:relative
        z-index: 10
        top: 0
        left: 0
        width: 100%
        transition: all .3s
        line-height: 0
